<div class="col-md-3">
  <div class="card card-body p-4 rounded-0 bg-secundario text-white">
    <h3 class="text-center text-dark">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-journal-plus"
        viewBox="0 0 16 16">
        <path fill-rule="evenodd"
          d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5z" />
        <path
          d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z" />
        <path
          d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z" />
      </svg> ACTUALIZAR ASIGNATURAS
    </h3>
    <form action="/updateAsignaturas/{{asignatura._id}}" method="POST">
      <h4>
        <div>
          <label for="nombre" class="text-dark">Nombre: </label>
          <input type="text" name="nombre" placeholder="Name" value="{{asignatura.nombre}}"
            class="form-control bg-white text-dark" />
        </div>
        <br />
        <div>
          <label for="creditos" class="text-dark">Creditos: </label>
          <input type="text" name="creditos" placeholder="Credits" value="{{asignatura.creditos}}"
            class="form-control bg-white text-dark" />
        </div>
        <br />
        <div>
          <label for="horas" class="text-dark">Horas: </label>
          <input type="text" name="horas" placeholder="Hours" value="{{asignatura.horas}}"
            class="form-control bg-white text-dark" />
        </div>
        <br />

        <div class="text-center">
          <button class="btn ov-btn-grow-ellipse1"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
              fill="currentColor" class="bi bi-save-fill" viewBox="0 0 16 16">
              <path
                d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v7.793L4.854 6.646a.5.5 0 1 0-.708.708l3.5 3.5a.5.5 0 0 0 .708 0l3.5-3.5a.5.5 0 0 0-.708-.708L8.5 9.293V1.5z" />
            </svg>
          </button>
          <a href="/asignaturas/agregar" class="btn ov-btn-grow-ellipse2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
              class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
              <path
                d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
            </svg>
          </a>
      </h4>
    </form>
  </div>
</div>