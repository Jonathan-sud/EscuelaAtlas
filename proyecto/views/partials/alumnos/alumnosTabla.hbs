{{#if alumnos}}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto">
      <div class="col-sm-15 text-center">
        <table class=" table table-striped table-bordered table-active">
          <h2 class="text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="35" fill="currentColor"
              class="bi bi-person-lines-fill" viewBox="0 0 16 16">
              <path
                d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
            </svg> LISTA GENERAL
          </h2>
          <thead>
            <tr>
              <th class="info text-center">Num.</th>
              <th class="info text-center">Nombre</th>
              <th class="info text-center">Paterno</th>
              <th class="info text-center">Materno</th>
              <th class="info text-center">Fecha Nac.</th>
              <th class="info text-center">Sexo</th>
              <th class="info text-center">Celular</th>
              <th class="info text-center">Direccion</th>
              <th class="info text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each alumnos}}
            <tr>
              <td>{{@index}}</td>
              <td>{{nombre}}</td>
              <td>{{paterno}}</td>
              <td>{{materno}}</td>
              <td>{{fechaNac}}</td>
              <td>{{sexo}}</td>
              <td>{{celular}}</td>
              <td>{{direccion}}</td>
              <td>
                {{#if opcion}}
                <a href="/statusAlumno/{{_id}}" class="btn btn-warning"> Baja
                </a>
                {{else}}
                <a href="/statusAlumno/{{_id}}" class="btn btn-success"> Alta
                </a>
                {{/if}}
                <a href="/updateAlumnos/{{_id}}" class="btn btn-info">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path
                      d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                  </svg></a>
                <a href="/deleteAlumnos/{{_id}}" class="btn btn-danger">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                    class="bi bi-trash-fill" viewBox="0 0 16 16">
                    <path
                      d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                  </svg>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        
        {{else}}
        <div class="h-100 d-flex align-items-center justify-content-center">
          <div class="text-center text-white">
            <h1>No hay Alumnos</h1>
            <img src="/icons/imagen.jpg" class="w-75" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}